<UserControl x:Class="CollectibleCardGame.Views.UserControls.UnitCardMiniUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CollectibleCardGame.Views.UserControls"
             mc:Ignorable="d" 
             AllowDrop="True"
             d:DesignHeight="250" d:DesignWidth="210" MaxHeight="250" MaxWidth="210">
    <Grid>
        <Grid.RenderTransform>
            <!-- ScaleX/Y = k -->
            <ScaleTransform CenterX="0" CenterY="0" ScaleX="1" ScaleY="1"/>
        </Grid.RenderTransform>

        <!--210x250-->
        <Border BorderThickness="2" BorderBrush="Black" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction="315" Opacity="0.8"/>
            </Border.Effect>

            <Grid Background="{StaticResource CardBackGround}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="2.6*"/>
                        <RowDefinition Height="0.75"/>
                    </Grid.RowDefinitions>


                    <!--картинка юнита 210x250-->
                    <Image x:Name="UnitImage" Source="{Binding Path=ImagePath}" Grid.RowSpan="2">
                        <Image.Effect>
                            <DropShadowEffect   RenderingBias="Quality"/>
                        </Image.Effect>
                    </Image>

                    <Grid Grid.Row="0" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.32*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"/>
                            <ColumnDefinition Width="5.5*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3.5*"/>
                                <ColumnDefinition  Width="*"/>
                            </Grid.ColumnDefinitions>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ItemsControl x:Name="AbilityStack" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.ColumnSpan="3" >
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel   Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <Rectangle Grid.Row="0" Stroke="Gold" RadiusX="5" RadiusY="5" StrokeThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Width="55" Height="55">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="../../Images/IconsUnit/sword.png"/>
                                    </Rectangle.Fill>
                                    <Rectangle.Effect>
                                        <DropShadowEffect   RenderingBias="Quality" Direction="315"  BlurRadius="10" ShadowDepth="8"/>
                                    </Rectangle.Effect>
                                </Rectangle>
                            </ItemsControl>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.75"/>
                            <ColumnDefinition Width="1.6*"/>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="1.6*"/>
                            <ColumnDefinition Width="0.75"/>
                        </Grid.ColumnDefinitions>
                        <Border CornerRadius="50"
                            Background="#EF3F37"
                            BorderBrush="Black"
                            BorderThickness="3"
                            Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       Margin=" 0,0,1,5"
                                       Text="{Binding Path=Attack}" FontWeight="Bold" FontSize="42" />
                        </Border>
                        <Border CornerRadius="50"
                            Background="#66BE61"
                            BorderBrush="Black"
                            BorderThickness="3"
                            Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin=" 0,0,1,5"
                                   Text="{Binding Path=Health}" FontWeight="Bold" FontSize="42" />
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

