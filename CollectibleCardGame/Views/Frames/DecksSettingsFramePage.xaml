<Page x:Class="CollectibleCardGame.Views.Frames.DecksSettingsFramePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CollectibleCardGame.Views.Frames"
      xmlns:cntrls="clr-namespace:CollectibleCardGame.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="DecksSettingsFramePage">

    <Grid  Background="Wheat">
        <TabControl ItemContainerStyle="{DynamicResource CustomTabItem}" VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" BorderBrush="#EDEDED" 
                    ItemsSource="{Binding TabItems}" SelectedItem="{Binding SelectedDeck}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <cntrls:DeckUserControl DataContext="{Binding ViewModel}"/>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Page>
